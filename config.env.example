# AWS Configuration
AWS_REGION="us-east-1"
AWS_PROFILE="default"

# Application Configuration
APP_NAME="my-application"
ENV_NAME="my-app-prod"
EB_PLATFORM="Python 3.11 running on 64bit Amazon Linux 2023" # See options at https://docs.aws.amazon.com/elasticbeanstalk/latest/platforms/platforms-supported.html

# Domain and SSL Configuration
DOMAIN_NAME="example.com"  # Domain for SSL certificate lookup (only needed if CUSTOM_DOMAIN is set)
ACM_CERTIFICATE_ARN=""  # Leave empty to search by domain, or provide existing ARN (only needed if CUSTOM_DOMAIN is set)

# Custom Domain Configuration
# Set CUSTOM_DOMAIN to your desired domain/subdomain (can be different from DOMAIN_NAME used for SSL)
# Examples: "api.example.com", "www.example.com", "example.com"
# Note: SSL certificates are only required when CUSTOM_DOMAIN is configured
CUSTOM_DOMAIN=""  # Leave empty to use AWS automatic SSL for default EB domain
AUTO_CONFIGURE_DNS="false"  # Set to "true" to automatically configure Route 53 DNS records
# Note: AUTO_CONFIGURE_DNS requires the domain to be hosted in Route 53

# S3 Bucket Configuration
STATIC_ASSETS_BUCKET="${APP_NAME}-static-assets-${AWS_REGION}"
UPLOADS_BUCKET="${APP_NAME}-uploads-${AWS_REGION}"

# Instance Configuration
INSTANCE_TYPE="t3.micro"
MIN_INSTANCES="1"
MAX_INSTANCES="4"

# Load Balancer Configuration
LB_TYPE="application"  # application or network
SSL_POLICY="ELBSecurityPolicy-TLS13-1-2-2021-06"

# IAM Configuration
USE_DEFAULT_IAM_ROLE="true"  # Set to false to create custom IAM role
CUSTOM_IAM_ROLE_NAME="${APP_NAME}-eb-instance-role"

# Additional Options
ENABLE_S3_VERSIONING="false"
ENABLE_HTTPS_REDIRECT="true"
HEALTH_CHECK_PATH="/"

# Database Configuration
DB_ENGINE="postgres"  # Database engine (postgres, mysql, mariadb)
DB_ENGINE_VERSION="16.3"  # Engine version (check AWS for available versions)
DB_INSTANCE_CLASS="db.t3.micro"  # Instance class (db.t3.micro, db.t3.small, db.m5.large, etc.)
DB_ALLOCATED_STORAGE="20"  # Storage in GB
DB_STORAGE_TYPE="gp3"  # Storage type (gp3, gp2, io1)
DB_NAME="${APP_NAME//-/_}_${ENV_NAME}"  # Database name (auto-derived from app/env names)
DB_USERNAME="dbadmin"  # Master username
DB_MASTER_PASSWORD=""  # Leave empty to auto-generate secure password and store in Secrets Manager
DB_MULTI_AZ="true"  # Enable Multi-AZ deployment for high availability
DB_BACKUP_RETENTION_DAYS="7"  # Automated backup retention (0-35 days)
DB_BACKUP_WINDOW="03:00-04:00"  # Daily backup window (UTC)
DB_MAINTENANCE_WINDOW="mon:04:00-mon:05:00"  # Weekly maintenance window (UTC)
DB_STORAGE_ENCRYPTED="true"  # Enable encryption at rest
DB_PUBLICLY_ACCESSIBLE="false"  # Make database publicly accessible (should be false for security)
DB_SKIP_FINAL_SNAPSHOT="false"  # Skip final snapshot on deletion (set to true for dev/test)

